{% extends 'base.html.twig' %}

{% block body %}
    <h1>Books</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.name }}</td>
                <td>{{ book.author }}</td>
                <td><a href="{{ path('app_admin_book_show', {'id' : book.id}) }}">Show</a></td>
            </tr>
        </tbody>
        {% endfor %}
    </table>
{% endblock %}
