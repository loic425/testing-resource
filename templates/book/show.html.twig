{% extends '@SyliusAdminUi/layout.html.twig' %}

{% block title %}
    {{ book.name }}
{% endblock %}

{% block content %}
    <h1>{{ book.name }}</h1>

    <a href="{{ path('app_book_index') }}">Back to index</a>

    <h2>Author</h2>
    <p>{{ book.author }}</p>

    <h2>Description</h2>
    <p>{{ book.description|default('')|nl2br }}</p>
{% endblock %}
